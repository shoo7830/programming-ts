{
    "compilerOptions": {
        "lib": ["ES2015"], // TSC가 코드 실행 환경에서 이용할 수 있다고 가정하는 API
        "module": "commonjs", // TSC가 코드를 컴파일할 대상 모듈 시스템
        "outDir": "dist", // 생성된 자바스크립트 코드를 출력할 디렉터리
        "sourceMap": true,
        "strict": true, // 유효하지 않은 코드를 확인할때 가능한 엄격하게 검사
        "target": "es2015"
    },

    // TSC가 타입스크립트 파일을 찾을 디렉터리
    "include": [
        "src"
    ]
}